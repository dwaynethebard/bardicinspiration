                    <h6 class="m-b-20">Users</h6>
                    <h2 class="text-right"><i class="fa fa-credit-card f-left"></i><span><%=@user%></span></h2>
                    <p ><%= link_to "Index", users_path %><span class="f-right"><%= link_to "New", new_user_path %></span></p>

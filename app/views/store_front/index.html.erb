 <% @page_title = "Store Front" %>
 <%current_slide = ["first-slide","second-slide","third-slide"]%>
 <%item_class = ["item active","item","item"]%>

 <!-- parallax ============ -->
<div class="parallax"></div>

 <div class="container store-spacing" stype=" line-height: 300px;">
  <h2> New Products, Great Deals </h2>
  <h5 > Limited Time price Drop!</h5>
 </div>
 <!--Carousel Wrapper-->

<div class="row">
   <div class="col-md-12"style="background-color: #FFFFFF;">
      <div class="carousel carousel-showmanymoveone slide" id="carousel-tilenav" data-interval="false">
         <div class="carousel-inner">
           <% @newest.each_with_index do |item,index| %>
           <%if index==1%>
            <div class="item active">

               <div class="col-xs-12 col-sm-3 col-md-2">
                  <div class="thumbnail item-box" >
                    <%= link_to(image_tag(item.image, id: "Store_image"), item_path(item), :class => 'action show')  %>
                    <h3><%= item.name %></h3>
                  </div>
               </div>

            </div>
             <%else%>
            <div class="item">
               <div class="col-xs-12 col-sm-3 col-md-2">
                  <div class="thumbnail item-box" >
                    <%= link_to(image_tag(item.image, id: "Store_image"), item_path(item), :class => 'action show')  %>
                    <h3><%= item.name %></h3>
                   
                  </div>
               </div>
            </div>
             <%end%>
            <%end%>
         </div>
         <a class="left carousel-control" href="#carousel-tilenav" data-slide="prev"><i class="glyphicon glyphicon-chevron-left"></i></a>
         <a class="right carousel-control" href="#carousel-tilenav" data-slide="next"><i class="glyphicon glyphicon-chevron-right"></i></a>
      </div>
   </div>
</div>




  
    <div class="container-fluid marketing">

    
    


    </div><!-- /.container -->

 <hr class="featurette-divider">

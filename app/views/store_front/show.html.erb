<div class="container">
    <div class="row" id="store">

    <% @items.each do |item| %>
        <div class="col-sm-4">
            <div class="thumbnail"> 
             <% if item.image.attached? %>
            <%= link_to(image_tag(item.image ), item_path(item), :class => 'action show')  %>
            <%else%>
             <%= link_to(image_tag("placeholderplant"), item_path(item), :class => 'action show')  %>
<% end %>

               
                <h3><%= item.name %></h3>
                <h4><%= number_to_currency(item.unit_value) %> QTY : <%= item.quantity %><h4>
                <p><%= truncate(item.description, length: 70) %></p>         
            </div>
        </div>
        <% end %>

    </div>
  
</div>
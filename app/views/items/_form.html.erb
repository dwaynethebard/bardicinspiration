            <div class="row">
                <div class="form-group col-sm-4 col-md-offset-4 field">
                    <%= f.label :name, class: "col-sm-3 control-label" %>
                    <%= f.text_field :name, class: "form-control", placeholder: "Name" %>
                </div>
            </div>
 

            <div class="row">
                <div class="form-group col-sm-4 col-md-offset-4 field">
                    <%= f.label :quantity, class: "col-sm-3 control-label" %>
                    <%= f.text_field :quantity, class: "form-control", placeholder: "quantity" %>
                </div>
            </div>

            <div class="row">
                <div class="form-group col-sm-4 col-md-offset-4 field">
                    <%= f.label "unit_value","value", class: "col-sm-3 control-label" %>
                    <%= f.text_field :unit_value, class: "form-control", placeholder: "unit value" %>
                </div>
            </div>

            <div class="row">
                <div class="form-group col-sm-4 col-md-offset-4 field">
                    <%= f.label :description, class: "col-sm-3 control-label" %>
                    <%= f.text_area :description, class: "form-control", placeholder: "description" %>
                </div>
            </div>
              <div class="row">
                <div class="form-group col-sm-4 col-md-offset-4" id="field">
                        <%= f.label :type_id, class: "col-sm-3 control-label" %>
                        <%= f.select(:type_id,  @type.all.collect { |p| [ p.name, p.id ] }, include_blank: true  ) %>
                </div>
            </div>   

            <div class="row">
                <div class="form-group col-sm-4 col-md-offset-4" id="field">
                        <%= f.label :promo_id, class: "col-sm-3 control-label" %>
                        <%= f.select(:promo_id,  @promo.all.collect { |p| [ p.name, p.id ] }, include_blank: true  ) %>
                </div>
            </div>            
            <div class="row">
                <div class="form-group col-sm-4 col-md-offset-4 field">
                    <%= f.label :image, class: "col-sm-3 control-label" %>
                    <%= f.file_field :image, label: "File Name", class: "form-control"  %>
<% if @item.image.attached? %>
<p> Current selected image</p>
<%= image_tag(@item.image, id: "edit_image",class: "col-sm-12") %>

<% end %>


                </div>
            </div>     
    

            <div class="row">
                <div class="container" id="submit" >
                    <%= f.submit "confirm" ,class:"btn btn-lg btn-primary btn-block" %>
                </div>
            </div>
   
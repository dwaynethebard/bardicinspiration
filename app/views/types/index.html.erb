
<% @page_title = "type" %>
    <% if !flash[:error].blank? %>
      <div class="container alert alert-danger">
        <%=flash[:error]%>
      </div>
    <%end%>
<div class="container">

  <div class="page-header">
    <h1 class="text-center" >types</h1>
  </div>
<div class ="btn">
<%= link_to("new", new_type_path) %>
</div>
  <div class="row" id="Inventory" >

      <table class="table table-hover table-bordered">

        <thead>
          <tr>
            <th >Name</th>
            <th >id</th>
            <th >Actions</th>
          </tr>
        </thead>

        <tbody>
          <% @types.each do |type| %>
            <tr>

              <td ><%= link_to(type.name, type_path(type), :class => 'action show') %></td>
              <td ><%= type.id %></td>
              <td class="actions" >
                <%= link_to("Edit", edit_type_path(type), :class => 'action edit') %>
                <%= link_to("Delete", delete_type_path(type), :class => 'action delete') %>
              </td>

            </tr>
          <% end %>
        </tbody>

      </table>
  
  </div>
</div>

